console.log('here we go')
airtable.getRecordsFromView('Status Updates', {
  view: 'This Week\'s Status Report',
  sort: [{field: "Team Name", direction: "desc"}]
})
  .then(statusUpdates => {
    console.log(statusUpdates)
    slack.sendPeopleStatusReport(statusUpdates)
  })
